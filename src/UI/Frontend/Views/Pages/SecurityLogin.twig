{% extends 'Frontend/Views/FrontendLayout.twig' %}

{% expect 'App\\UI\\Frontend\\Views\\Pages\\SecurityLogin' as MODEL %}


{% block PAGE_TITLE %}{{ 'login.title'|trans }}{% endblock %}

{% block PAGE_H1 %}{{ 'login.title'|trans }}{% endblock %}


{% block PAGE_CONTENT %}

<section>
    <div class="page__wrapper w-responsive">

        <div class="thin-box">
            <h1 class="text-center">{{ 'login.title'|trans }}</h1>
            
            <form class="form" action="{{ path('frontend_security_login') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-col">
                    <div class="form-row">
                        <span class="input-prefix">
                            <svg aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="svg-inline--fa fa-at fa-w-16 fa-2x"><path fill="currentColor" d="M256 8C118.941 8 8 118.919 8 256c0 137.059 110.919 248 248 248 48.154 0 95.342-14.14 135.408-40.223 12.005-7.815 14.625-24.288 5.552-35.372l-10.177-12.433c-7.671-9.371-21.179-11.667-31.373-5.129C325.92 429.757 291.314 440 256 440c-101.458 0-184-82.542-184-184S154.542 72 256 72c100.139 0 184 57.619 184 160 0 38.786-21.093 79.742-58.17 83.693-17.349-.454-16.91-12.857-13.476-30.024l23.433-121.11C394.653 149.75 383.308 136 368.225 136h-44.981a13.518 13.518 0 0 0-13.432 11.993l-.01.092c-14.697-17.901-40.448-21.775-59.971-21.775-74.58 0-137.831 62.234-137.831 151.46 0 65.303 36.785 105.87 96 105.87 26.984 0 57.369-15.637 74.991-38.333 9.522 34.104 40.613 34.103 70.71 34.103C462.609 379.41 504 307.798 504 232 504 95.653 394.023 8 256 8zm-21.68 304.43c-22.249 0-36.07-15.623-36.07-40.771 0-44.993 30.779-72.729 58.63-72.729 22.292 0 35.601 15.241 35.601 40.77 0 45.061-33.875 72.73-58.161 72.73z" class=""></path></svg>
                        </span>
                        <input type="email" name="username" required="" autofocus="" value="{{ MODEL.LastUsername }}" placeholder="{{ 'account.email'|trans }}">
                    </div>
                </div>
                
                <div class="form-col">
                    <div class="form-row">
                        <span class="input-prefix">
                            <svg aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="svg-inline--fa fa-unlock-alt fa-w-14 fa-2x"><path fill="currentColor" d="M400 256H152V152.9c0-39.6 31.7-72.5 71.3-72.9 40-.4 72.7 32.1 72.7 72v16c0 13.3 10.7 24 24 24h32c13.3 0 24-10.7 24-24v-16C376 68 307.5-.3 223.5 0 139.5.3 72 69.5 72 153.5V256H48c-26.5 0-48 21.5-48 48v160c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V304c0-26.5-21.5-48-48-48zM264 408c0 22.1-17.9 40-40 40s-40-17.9-40-40v-48c0-22.1 17.9-40 40-40s40 17.9 40 40v48z" class=""></path></svg>
                        </span>
                        <input type="password" name="password" required="" placeholder="{{ 'account.password'|trans }}">
                    </div>
{#                    <p class="text-center"><a href="password-reset.html" class="small">{{ 'login.password_forgotten'|trans }}</a></p> #}
                </div>

                <div class="form-row">
                    <input type="submit" value="{{ 'login.sign_in'|trans }}" />
                </div>
                
                <div class="row text-center mt-8 text-sm">
                    {{ 'login.no_account'|trans }} <a href="{{ path('frontend_security_register') }}">{{ 'login.sign_up'|trans }}</a>
                </div>
            </form>
            
        </div>
    </div>
    
</section>
{% endblock %}
